{% extends 'ElZorroBankerBundle::base.html.twig' %}

{% block content %}

<h1>{{ 'Transactions'|trans }}</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Date'|trans }}</th>
            <th>{{ 'Category'|trans }}</th>
            <th>{{ 'Amount'|trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for transfer in pagination %}
        <tr>
            <td><span data-toggle="tooltip" title="{{ transfer.description }}">{{ transfer.name }}</span></td>
            <td>{{ transfer.date|date('d-m-Y') }}</td>
            <td>{{ transfer.category }}</td>
            <td class="text-right {% if transfer.amount >= 0 %}success{% else %}danger{% endif %}">{{ transfer.amount }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>

{% endblock %}
