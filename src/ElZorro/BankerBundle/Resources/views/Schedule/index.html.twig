{% extends 'ElZorroBankerBundle::base.html.twig' %}

{% block content %}

<h1>{{ 'Schedules'|trans }}</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Amount'|trans }}</th>
            <th>{{ 'Period'|trans }}</th>
            <th>{{ 'Startdate'|trans }}</th>
            <th>{{ 'Enddate'|trans }}</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    {% for schedule in pagination %}
        <tr>
            <td>{{ schedule.name }}</td>
            <td>{{ schedule.amount }}</td>
            <td>{{ schedule.period }}</td>
            <td>{% if schedule.startdate %}{{ schedule.startdate|date('d-m-Y') }}{% endif %}</td>
            <td>{% if schedule.enddate %}{{ schedule.enddate|date('d-m-Y') }}{% endif %}</td>
            <td>
                <a href="{{ path('el_zorro_banker_schedule_edit', {id: schedule.id})}}">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="{{ path('el_zorro_banker_schedule_delete', {id: schedule.id})}}" onclick="return confirm('Are you sure you want to delete this schedule?')">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>

<a class="btn btn-primary" href="{{ path('el_zorro_banker_schedule_add') }}">{{ 'Add schedule'|trans }}</a>

{% endblock %}
